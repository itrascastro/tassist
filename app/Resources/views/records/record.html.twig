<!-- Fecha | Dia de la semana | Horario | Hora Registro | Delay | Justificado | CommentByUser | CommentByAdmin -->

<div class="rounded-box margin-bottom-lg {% if record.delay > maxDelayAllowed and record.justified != 2 %}warning-record{% else %}success-record{% endif %}">
    <div class="row">
        <div class="col-md-1">
            {{ record.createdAt|date('d/m/y') }}
        </div>
        <div class="col-md-1">
            {{ record.dayOfWeek }}
        </div>
        <div class="col-md-1">
            {{ record.scheduleTime|date('H:i') }}
        </div>
        <div class="col-md-1">
            {{ record.createdAt|date('H:i') }}
        </div>
        <div class="col-md-1">
            {{ record.delay }}
        </div>
        <div class="col-md-1">
            {{ record.justified }}
        </div>
        <div class="col-md-3">
            {{ record.commentByUser }}
        </div>
        <div class="col-md-3">
            {{ record.commentByAdmin }}
        </div>
    </div> <!-- row -->
</div>